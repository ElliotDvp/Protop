@model PortalInmobiliario.Models.AgendarVisitaViewModel

@{
    ViewData["Title"] = "Agendar Visita";
}

<h2>Agendar Visita</h2>
<h4>@Model.InmuebleTitulo</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InmuebleId" />
            <input type="hidden" asp-for="InmuebleTitulo" />

            <div class="form-group mb-3">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notas" class="control-label"></label>
                <textarea asp-for="Notas" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Notas" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-success">Agendar Visita</button>
                <a asp-controller="Inmuebles" asp-action="Details" asp-route-id="@Model.InmuebleId" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}